<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biathlon_Esthivaukan.MainPage"
             Title="Main Page"
             NavigationPage.HasBackButton="False"
    >


    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>
    <Grid>
        <!-- Row definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Main content row, adjust height as needed -->
            <RowDefinition Height="Auto" />
            <!-- Bottom row for buttons -->
        </Grid.RowDefinitions>

        <!-- StackLayout for top buttons (400m, 200m, 600m) -->
        <StackLayout Grid.Row="0"
                     Spacing="40" VerticalOptions="Start" HorizontalOptions="Center" Margin="100">
            <!-- Buttons for 400m, 200m, 600m -->
            <Button x:Name="Btn400m"
                    Text="400 mètres"
                    Clicked="On400mClicked"
                    HorizontalOptions="Fill" />
            <Button x:Name="Btn200m"
                    Text="200 mètres"
                    Clicked="On200mClicked"
                    HorizontalOptions="Fill" />
            <Button x:Name="Btn600m"
                    Text="600 mètres"
                    Clicked="On600mClicked"
                    HorizontalOptions="Fill" />
        </StackLayout>

        <!-- Main content (if any) -->
        <VerticalStackLayout Grid.Row="0"
                             Padding="30,0"
                             Spacing="25">
            <!-- Add your main content here -->
        </VerticalStackLayout>

        <!-- Bottom buttons -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*, *, *">

            <!-- Left button (Suiviperf) -->
            <Button x:Name="Suiviperf"
                    Text="Suiviperf"
                    WidthRequest="137"
                    HeightRequest="100"
                    BorderWidth="4"
                    Clicked="OnTrackingClicked"
                    BorderColor="Black"
                    BackgroundColor="Green"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Grid.Column="0" />

            <!-- Center button (Course) -->
            <Button x:Name="Home_btn"
                    Text="Accueil"
                    WidthRequest="137"
                    HeightRequest="100"
                    BorderWidth="4"
                    BorderColor="Black"
                    BackgroundColor="Green"
                    TextColor="LightBlue"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Grid.Column="1" />

            <!-- Right button (Profil) -->
            <Button x:Name="Profil"
                    Text="Profil"
                    WidthRequest="137"
                    HeightRequest="100"
                    BorderWidth="4"
                    BorderColor="Black"
                    Clicked="OnProfilClicked"
                    BackgroundColor="Green"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Grid.Column="2" />
        </Grid>

        <!-- Circle "Go" centered in the middle of the bottom half -->
        <VerticalStackLayout>
            <Button x:Name="GoButton"
                    Text="Go"
                    Clicked="OnRunClicked"
                    WidthRequest="150"
                    HeightRequest="150"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="75"
                    BorderColor="Black"
                    BorderWidth="2"
                    Margin="0,400,0,0"
                    />
        </VerticalStackLayout>
    </Grid>

</ContentPage>
