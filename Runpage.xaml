<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biathlon_Esthivaukan.Runpage"
             Title="">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <VerticalStackLayout>

        <StackLayout VerticalOptions="Start" Spacing="10">
            <BoxView HeightRequest="60" Color="#FFAE90FF"/>
            <Label Text="Course"
                   FontSize="18"
                   TextColor="White"
                   Margin="10,-70,0,0"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Start"
                   HeightRequest="60"
                   BackgroundColor="Transparent"/>
        </StackLayout>

        <Label x:Name="StopwatchLabel"
               Text="00:00"
               FontSize="60"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               Margin="100"/>

        <Button x:Name="ShootButton"
                Text="Passage au stand de tir"
                Clicked="OnShootClicked"
                HorizontalOptions="Center"
                WidthRequest="350"
                HeightRequest="200"
                VerticalOptions="CenterAndExpand"/>
    </VerticalStackLayout>
</ContentPage>
