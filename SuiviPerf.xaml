<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biathlon_Esthivaukan.SuiviPerf"
             Title="SuiviPerf">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <Grid>


        <Grid Grid.Row="1"
              ColumnDefinitions="*, *, *">
            <!-- Left button (Suiviperf) -->
            <Button x:Name="Suiviperf"
        Text="Suiviperf"
        WidthRequest="105"
        HeightRequest="60"
        BorderWidth="2"
        Clicked="OnHistoryClicked"
        BorderColor="Black"
        BackgroundColor="#FFAE90FF"
        TextColor="Black"
        HorizontalOptions="Center"
        VerticalOptions="End"
        Grid.Column="0" 
        Margin="-10,0,0,0"/>


            <!-- Center button (Course) -->
            <Button x:Name="Home_btn"
        Text=""
        WidthRequest="105"
        HeightRequest="60"
        BorderWidth="2"
        BorderColor="Black"
        BackgroundColor="#FFAE90FF"
        TextColor="White"
        Clicked="OnHomeClicked"
        HorizontalOptions="Center"
        VerticalOptions="End"
        Grid.Column="1" 
        Margin="0,0,0,0"/>

            <Image Source="Ressources/Images/house.png" Grid.Column="1" HorizontalOptions="Center" Margin="38,5,40,5 "></Image>

            <!-- Right button (Profil) -->
            <Button x:Name="Profil"
        Text="Profil"
        WidthRequest="105"
        HeightRequest="60"
        BorderWidth="2"
        BorderColor="Black"
        Clicked="OnProfileClicked"
        BackgroundColor="#FFAE90FF"
        TextColor="Black"
        HorizontalOptions="Center"
        VerticalOptions="End"
        Grid.Column="2" 
        Margin="10,0,0,0"/>
        </Grid>
    </Grid>
</ContentPage>
